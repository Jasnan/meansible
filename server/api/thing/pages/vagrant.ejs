Vagrant.require_version ">= 1.5"

VAGRANTFILE_API_VERSION = "2"
Vagrant.configure(VAGRANTFILE_API_VERSION) do |config|
  config.vm.provider :virtualbox do |v|
      v.name = "<%- data.hostname || 'meansible'%>"
      v.customize [
          "modifyvm", :id,
          "--name", "<%- data.hostname || 'meansible'%>",
          "--memory", <%- data.memory || '512'%>,
          "--natdnshostresolver1", "on",
          "--cpus", 1,
      ]
  end

  config.vm.box = "<%- data.boxname %>"
  <% if (data.ports) { %>
  <% data.ports.forEach(function(port) { %>config.vm.network "forwarded_port", guest: <%= port.guest %>, host: <%= port.host %>
  <% }); %><% } %>
  config.vm.network :private_network, ip: "<%- data.hostip || '192.168.33.99'%>"
  config.ssh.forward_agent = true

    config.vm.provision :ansible do |ansible|
      ansible.playbook = "ansible/playbook.yml"
      ansible.limit = 'all'
      ansible.extra_vars = {
          private_interface: "<%- data.hostip || '192.168.33.99'%>",
          hostname: "<%- data.hostname || 'meansible'%>"
      }
    end

    config.vm.synced_folder "./", "/vagrant", type: "nfs"
end
